<!doctype html>
 
<html class="no-js" lang="en">
 
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Pedidos || Arte stelen</title>
    <meta name="description" content="Sufee Admin - HTML5 Admin Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="apple-icon.png">
    <link rel="shortcut icon" href="favicon.ico">


    <link rel="stylesheet" href="/da/vendors/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/da/vendors/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="/da/vendors/themify-icons/css/themify-icons.css">
    <link rel="stylesheet" href="/da/vendors/flag-icon-css/css/flag-icon.min.css">
    <link rel="stylesheet" href="/da/vendors/selectFX/css/cs-skin-elastic.css">
    <link rel="stylesheet" href="/da/vendors/datatables.net-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="/da/vendors/datatables.net-buttons-bs4/css/buttons.bootstrap4.min.css">

    <link rel="stylesheet" href="/da/assets/css/style.css">

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>
</head>

<body>
     

    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">

        <!-- Header-->

        <!-- Header-->

        <div class="breadcrumbs">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Pedidos</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                       
                    </div>
                </div>
            </div>
        </div>

        <div class="content mt-3">
            <div class="animated fadeIn">
                <div class="row">

                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Total de ventas: <%= totalpedidos %>
                                </strong>
                            </div>






                            <% orders.forEach(function (order ) { %>

                            <div class="card-body">
                                <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Nombre</th>
                                            <th>Número</th>  
                                            <th>Dirección</th>   
                                            <th>Tipo de envío</th>    
                                            <th>Total</th>                                             
                                            <th>Fecha</th>                                             
                                            <th>Revisión</th>                                             

                                          
                                           
                                        </tr>
                                    </thead>
                                <% order.items.forEach(function (item ) { %>
                                    <tbody>
                                        <tr>
                                            <td><%= item.item.title %></td>
                                            <td><%= item.item.talle %></td>
                                            <td><%= item.item.color %></td>
                                            <td><%= item.qty %></td>
                                            <td><%= item.total %></td>                                    
                                        </tr>
                                    </tbody>
                                    <% }) %>    
                                    
                                    <td>Nombre: <%= order.name %></td>
                                    <td>Número  <%= order.number %></td>
                                    <td>Dirección:  <%= order.address %>, <%= order.localidad %></td>
                                    <td>Envio:  <%= order.envio %></td>
                                    <td>Total:  $<%= order.total  %></td>
                                    <td>Fecha:  <%= order.createdAt.toLocaleDateString() %></td>
                                    <td><a class="btn btn-danger" href="/order/delete/<%= order.id %>">
                                        Eliminar
                                    </a>
                                    <a class="<%= order.status ? 'btn btn-success' : 'btn btn-primary' %>"
                                    href="/order/turn/<%= order.id %>">Aprovado</a>
                                  </td>
                                </tr>
            
                                <% }) %>  
                                </table>
                            </div>
                        </div>
                    </div>


                </div>
            </div><!-- .animated -->
        </div><!-- .content -->


        <div class="col-12">
            <div class="row">
        
                  <!-- pagination -->
                  <% if(pages > 0) { %> <!-- show pagination if there is pages -->
                    <nav  class="mx-auto" style="margin-bottom: 50px">
                      <ul class="pagination">
                        <!-- FIRST ITEM -->
                        <% if(current == 1) { %>
                          <li class="page-item disabled">
                            <a class="page-link" href="#">First</a>
                          </li>
                        <% } else { %>
                          <li class="page-item">
                            <a class="page-link" href="/visitas/1">First</a>
                          </li>
                        <% } %>
                        <!-- ITEMS  -->
                        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                        <% if(i !== 1) { %>
                          <li class="page-item disabled">
                            <a class="page-link" href="#">...</a>
                          </li>
                        <% } %>
                        <% for(; i <= (Number(current) + 4) && i <= pages; i++) { %>
                          <% if(i == current) { %>
                            <li class="page-item active">
                              <a class="page-link" href="<%= i %>">
                                <%= i %>
                              </a>
                            </li>
                          <% } else { %>
                            <li class="page-item">
                              <a class="page-link" href="/visitas/<%= i %>">
                                <%= i %>
                              </a>
                            </li>
                          <% } %>
                          <% if (i == Number(current) + 4 && i < pages) { %>
                             <li class="page-item disabled">
                               <a class="page-link" href="#">...</a>
                             </li>
                          <% } %>
                        <% } %>
                        <!-- LAST ITEM -->
                        <% if(current == pages) { %>
                          <li class="page-item disabled">
                            <a class="page-link" href="#">
                              Last
                            </a>
                          </li>
                        <% } else { %>
                          <li class="page-item">
                            <a class="page-link" href="/vistas/<%= pages %>">
                              Last
                            </a>
                          </li>
                        <% } %>
                      </ul>
                    </nav>
                  <% } %>
        
        
                </div>
              </div>


    </div><!-- /#right-panel -->

    <!-- Right Panel -->




    <script src="da/vendors/jquery/dist/jquery.min.js"></script>
    <script src="da/vendors/popper.js/dist/umd/popper.min.js"></script>
    <script src="da/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="da/assets/js/main.js"></script>


    <script src="da/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="da/vendors/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="da/vendors/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
    <script src="da/vendors/datatables.net-buttons-bs4/js/buttons.bootstrap4.min.js"></script>
    <script src="da/vendors/jszip/dist/jszip.min.js"></script>
    <script src="da/vendors/pdfmake/build/pdfmake.min.js"></script>
    <script src="da/vendors/pdfmake/build/vfs_fonts.js"></script>
    <script src="da/vendors/datatables.net-buttons/js/buttons.html5.min.js"></script>
    <script src="da/vendors/datatables.net-buttons/js/buttons.print.min.js"></script>
    <script src="da/vendors/datatables.net-buttons/js/buttons.colVis.min.js"></script>
    <script src="da/assets/js/init-scripts/data-table/datatables-init.js"></script>


</body>

</html>
